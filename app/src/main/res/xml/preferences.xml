<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_font">
        <com.vanniktech.vntfontlistpreference.VNTFontListPreference
            xmlns:vntfontlistpreference="http://schemas.android.com/apk/res-auto"
            android:defaultValue="@string/pref_font_arabic_typeface_default"
            android:key="@string/pref_font_arabic_typeface"
            android:summary="Testing summary 1"
            android:title="@string/pref_font_arabic_typeface_title"
            vntfontlistpreference:fontDirectory="@string/pref_font_directory"
            vntfontlistpreference:fontPreviewString="@string/pref_font_arabic_typeface_preview"/>

        <com.vanniktech.vntnumberpickerpreference.VNTNumberPickerPreference xmlns:vntnumberpickerpreference="http://schemas.android.com/apk/res-auto"
            android:defaultValue="@integer/pref_font_arabic_size_default"
            android:key="@string/pref_font_arabic_size"
            android:title="@string/pref_font_arabic_size_title"
            vntnumberpickerpreference:maxValue="@integer/pref_font_arabic_size_max"
            vntnumberpickerpreference:minValue="@integer/pref_font_arabic_size_min" />

        <com.vanniktech.vntnumberpickerpreference.VNTNumberPickerPreference xmlns:vntnumberpickerpreference="http://schemas.android.com/apk/res-auto"
            android:defaultValue="@integer/pref_font_other_size_default"
            android:key="@string/pref_font_other_size"
            android:title="@string/pref_font_other_size_title"
            vntnumberpickerpreference:maxValue="@integer/pref_font_other_size_max"
            vntnumberpickerpreference:minValue="@integer/pref_font_other_size_min" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_display">
        <CheckBoxPreference
            android:key="@string/pref_night_mode"
            android:summary="@string/pref_night_mode_summary"
            android:title="@string/pref_night_mode_title" />
    </PreferenceCategory>
</PreferenceScreen>